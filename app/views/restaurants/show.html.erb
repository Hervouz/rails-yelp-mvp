<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @restaurant.name %></h1>
      <p>
        <%= @restaurant.address %>
      </p>
      <p>
        <%= @restaurant.phone_number %>
      </p>
      <p>
        <%= @restaurant.category %>
      </p>

      <h3>Reviews</h3>


      <p><%@restaurant.reviews.each do |review|%>
        <p> <%= review.content %> </p>
        <p> <%= review.rating %> </p>
      <% end %>

      <%= link_to "Add a Review", new_restaurant_review_path(@restaurant) %>
      <%= link_to "Back", restaurants_path %>
    </div>
  </div>
</div>

